<div class="recipe-card">
  <div class="recipe-image" style="background-image: url('<%= image_url %>');">
  </div>

  <div class="recipe-card-content">
    <h5><%= name %></h5>
    <p><%= description %></p>
    <br>
    <div class="container-fluid d-flex justify-content-between align-items-center mb-4">
      <p>"<%= comment %>"</p>
      <p><%= rating %>/5</p>
    </div>
  </div>
</div>
